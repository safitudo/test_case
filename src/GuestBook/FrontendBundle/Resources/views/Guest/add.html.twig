{% extends 'GuestBookFrontendBundle::layout.html.twig' %}
{% form_theme form 'GuestBookFrontendBundle:Forms:widgets.html.twig' %}


{% block body %}

<h1>Add New Guest</h1>
{% if errors | length > 0 %}
<div class="alert alert-danger">
	{% for error in errors %}
		<p>{{error.getMessage()}}</p>
	{% endfor %}
</div>
{% else %}
  <br />
{% endif %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}

  
		{{ form_label(form.name) }}
	<div class="row">
		<div class="col-sm-6">
    		{{ form_widget(form.name) }}
    	</div>
    </div>

	<br />
    	{{ form_label(form.email) }}

    <div class="row">
    	<div class="col-sm-6">
        	{{ form_widget(form.email) }}
    	</div>
    </div>

	<br />
        	{{ form_widget(form.save) }}
        
    
{{ form_end(form) }}
</div>
{% endblock %}